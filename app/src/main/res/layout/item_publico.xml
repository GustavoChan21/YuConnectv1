<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="30dp"
    android:layout_marginVertical="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/PublicoFoto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="#efefefef" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@color/publicos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PublicoFoto">

            <TextView
                android:id="@+id/tvNombreEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/tipo8"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/Nombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoPublicos"
            android:padding="1dp"
            android:text="  Nombre:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <TextView
            android:id="@+id/PublicoNombre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fondoPublicos"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Nombre"
            tools:text="Nombre:" />

        <TextView
            android:id="@+id/Horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="1dp"
            android:text="  Horario:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PublicoNombre" />

        <TextView
            android:id="@+id/PublicoHorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Horario"
            tools:text="Horarios:" />

        <TextView
            android:id="@+id/Direcci贸n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="1dp"
            android:text="  Direcci贸n:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PublicoHorarios" />

        <TextView
            android:id="@+id/PublicoUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Direcci贸n"
            tools:text="Ubicaci贸n:" />

        <TextView
            android:id="@+id/Municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="1dp"
            android:text="  Municipio:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PublicoUbicacion" />

        <TextView
            android:id="@+id/PublicoMunicipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Municipio"
            tools:text="Municipio:" />

        <TextView
            android:id="@+id/Contacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="1dp"
            android:text="  Contacto:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PublicoMunicipio" />

        <TextView
            android:id="@+id/PublicoContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Contacto"
            tools:text="Contacto:" />

        <TextView
            android:id="@+id/Servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="1dp"
            android:text="  Tipo de Servicio:"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PublicoContacto" />

        <TextView
            android:id="@+id/PublicoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondoPublicos"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Servicio"
            tools:text="Servicio:" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
