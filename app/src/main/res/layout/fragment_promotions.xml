<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PromotionsFragment">

    <TextView
        android:id="@+id/PromocionesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/poppins_extrabold"
        android:padding="16dp"
        android:text="Promociones del mes de Octubre"
        android:textAlignment="center"
        android:textColor="#000"
        android:alpha="0.8"
        android:textSize="18dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvpromociones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PromocionesTitle"
        tools:listitem="@layout/item_promotions" />


</androidx.constraintlayout.widget.ConstraintLayout>